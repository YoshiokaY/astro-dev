---
/**
 * コンセプトセクションコンポーネント
 */
interface Props {
  /**
   * コンセプトデータ
   */
  concept: {
    ttl: string;
    desc: string;
  };
}

const { concept } = Astro.props;
---

<section class="about-section">
  <h2 class="section-title">{concept.ttl}</h2>
  <p class="section-description" set:html={concept.desc}></p>
</section>