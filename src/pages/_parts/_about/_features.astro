---
/**
 * 特徴セクションコンポーネント
 */
interface Props {
  /**
   * 特徴データ
   */
  features: {
    ttl: string;
    items: string[];
  };
}

const { features } = Astro.props;
---

<section class="about-section">
  <h2 class="section-title">{features.ttl}</h2>
  <ul class="feature-list">
    {features.items.map((feature) => (
      <li class="feature-item" set:html={feature}></li>
    ))}
  </ul>
</section>