---
/**
 * 技術スタックセクションコンポーネント
 */
interface Props {
  /**
   * 技術スタックデータ
   */
  tech: {
    ttl: string;
    desc: string;
    items: {
      name: string;
      desc: string;
    }[];
  };
}

const { tech } = Astro.props;
---

<section class="about-section">
  <h2 class="section-title">{tech.ttl}</h2>
  <p class="section-description" set:html={tech.desc}></p>
  <div class="tech-grid">
    {tech.items.map((techItem) => (
      <div class="tech-card">
        <h3 class="tech-name">{techItem.name}</h3>
        <p class="tech-desc" set:html={techItem.desc}></p>
      </div>
    ))}
  </div>
</section>