---
import Layout from "@/layouts/Layout.astro";
import Template from "@/layouts/Template.astro";
import SampleHero from "@/pages/_parts/_top/_sample.astro";
import "@/scss/pages/_top.scss";

const page = {
  head: {
    slug: "top",
    ttl: "サンプルページ",
    description: "Astro開発環境のサンプルページです。",
    url: "",
  },
  contents: {
    sample: {
      ttl: "サンプルページ",
      desc: [
        "このページはAstro開発環境のサンプルページです。<br>ヘッダー、フッター、メインコンテンツのシンプルな構成で作成されています。",
        "コンポーネント化とデータ駆動の開発手法のデモンストレーションも兼ねています。",
      ],
      features: {
        ttl: "機能紹介",
        items: [
          "✅ Astroによる高速な静的サイト生成",
          "✅ TypeScriptサポート",
          "✅ SCSS（Dart Sass）",
          "✅ Tailwind CSSサポート",
          "✅ WebP画像変換サポート",
          "✅ コンポーネント化アーキテクチャ",
          "✅ データ駆動開発",
        ],
      },
      textSample: {
        ttl: "テキストサンプル",
        content:
          "あのイーハトーヴォのすきとおった風、夏でも底に冷たさをもつ青いそら、うつくしい森で飾られたモリーオ市、郊外のぎらぎらひかる草の波。また、その奥羽山脈の重畳たる稜線は、濃紫のなつかしい線となって、東北の空にひかえている。",
      },
      pictureDemo: {
        ttl: "Pictureコンポーネントデモ",
        desc: "<strong>Picture.astro</strong>コンポーネントの使用例です。<br>レスポンシブ対応と遅延読み込みに対応しています。",
        img: {
          src: "sample.png",
          alt: "Astroサンプルサイトのデモ画像",
          sizes: [800, 600],
        },
      },
    },
  },
};

const imgPath = "/_assets/img/" + page.head.slug + "/";
---

<Template>
  <SampleHero contents={page.contents.sample} imgPath={imgPath} />
</Template>
