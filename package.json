{
  "name": "astro-dev",
  "private": true,
  "version": "1.5.1",
  "type": "module",
  "scripts": {
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "// === Linterチェックコマンド ===": "",
    "lint": "eslint 'src/**/*.{js,ts,astro,json}' --fix",
    "lint:css": "stylelint 'src/**/*.scss' --fix",
    "lint:markup": "markuplint 'htdocs/**/*.{html,php}' --fix --config .markuplintrc",
    "lint:all": "run-p lint lint:css lint:markup",
    "lint:ci": "run-s lint:js:ci lint:css:ci lint:markup:ci",
    "lint:js:ci": "eslint 'src/**/*.{js,ts,astro,json}' --format json --output-file eslint-report.json",
    "lint:css:ci": "stylelint 'src/**/*.scss' --formatter json > stylelint-report.json",
    "lint:markup:ci": "markuplint 'htdocs/**/*.{html,php}' -f JSON > markuplint-report.json",
    "// === Playwrightチェックコマンド ===": "",
    "test:a11y:setup": "npx playwright install --with-deps",
    "test:a11y": "playwright test",
    "test:a11y:ui": "playwright test --ui",
    "test:a11y:report": "playwright show-report",
    "// === Lighthouseチェックコマンド ===": "",
    "lighthouse": "lhci autorun && npm run lighthouse:open",
    "lighthouse:collect": "lhci collect",
    "lighthouse:assert": "lhci assert",
    "lighthouse:open": "open .lighthouseci/*.html || xdg-open .lighthouseci/*.html || start .lighthouseci/*.html"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "dependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.56.0",
    "astro": "^5.10.0",
    "axe-core": "^4.11.0"
  },
  "devDependencies": {
    "@acab/reset.css": "^0.11.0",
    "@astrojs/check": "^0.9.0",
    "@eslint/js": "^9.29.0",
    "@lhci/cli": "^0.15.1",
    "@markuplint/astro-parser": "^4.6.19",
    "@tailwindcss/vite": "^4.1.10",
    "@types/imagemin-mozjpeg": "^8.0.4",
    "@types/imagemin-svgo": "^10.0.5",
    "@types/imagemin-webp": "^7.0.3",
    "@types/jquery": "^3.5.32",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vheemstra/vite-plugin-imagemin": "^2.0.0",
    "astro-relative-links": "^0.4.2",
    "chokidar-cli": "^3.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "glob": "^11.0.3",
    "globals": "^16.2.0",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "imagemin-webp": "^8.0.0",
    "jquery": "^3.7.1",
    "markuplint": "^4.12.0",
    "npm-run-all2": "^7.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "sass": "^1.89.2",
    "stylelint": "^16.21.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite-node": "^2.0.0",
    "vite-plugin-sass-glob-import": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
